*.sh eol=lf
*.py eol=lf
/git-filter-repo eol=lf
/contrib/filter-repo-demos/[a-z]* eol=lf
/t/t9*/* eol=lf

# C# dosyaları için yapılandırma (yüksek öncelik)
*.cs linguist-language=C# linguist-detectable=true
*.csproj linguist-language=C# linguist-detectable=true
*.sln linguist-language=C# linguist-detectable=true
*.cshtml linguist-language=C# linguist-detectable=true
*.razor linguist-language=C# linguist-detectable=true

# Diğer dosyalar için yapılandırma (düşük öncelik)
*.py linguist-detectable=false
*.md linguist-detectable=false
*.txt linguist-detectable=false
*.sh linguist-detectable=false

# Satır sonu karakterleri için yapılandırma
*.cs text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf
*.cshtml text eol=crlf
*.razor text eol=crlf
*.json text eol=crlf
*.config text eol=crlf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.gitattributes text eol=lf
*.gitignore text eol=lf
