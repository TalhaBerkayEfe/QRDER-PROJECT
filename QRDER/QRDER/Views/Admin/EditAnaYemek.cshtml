@model QRDER.Models.Data.AnaYemek
@{
    ViewData["Title"] = "Ana Yemek Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Ana Yemek Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditAnaYemek" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="AnaYemekId" />
                        <div class="form-group">
                            <label asp-for="AnaYemek1">Yemek Adı</label>
                            <input asp-for="AnaYemek1" class="form-control" />
                            <span asp-validation-for="AnaYemek1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnaYemekFiyat">Fiyat</label>
                            <input asp-for="AnaYemekFiyat" class="form-control" />
                            <span asp-validation-for="AnaYemekFiyat" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-warning">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 