@model QRDER.Models.Data.Icecekler
@{
    ViewData["Title"] = "Yeni İçecek Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Yeni İçecek Ekle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddIcecek" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Icecekler1">İçecek Adı</label>
                            <input asp-for="Icecekler1" class="form-control" />
                            <span asp-validation-for="Icecekler1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IceceklerFiyat">Fiyat</label>
                            <input asp-for="IceceklerFiyat" class="form-control" />
                            <span asp-validation-for="IceceklerFiyat" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="IceceklerGorsel">İçecek Görseli</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="IceceklerGorsel" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-success">Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 